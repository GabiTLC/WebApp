@model Bug

<link rel="stylesheet" href="~/css/bugPage.css" asp-append-version="true"/>


@{
    ViewData["Title"] = "Add Bug";
}
<br/>
<br/>
<br/>
<br/>
<h2 class="text-info text-dark">Edit Bug</h2>
<div class="pt-2 pl-0">
    <form method="get" asp-controller="Bugs" asp-action="DisplayBug">
      
        <div class="gridBtn">
            
            <div class="form-group ml-2">
                <div class="col-3">
                    <label asp-for="Summary"></label> @*add style*@
                </div>
                <div class="col-10">
                    <input readonly="readonly" asp-for="Summary" class="form-control"/>
                </div>
            </div>
            
            <div class="Buttons">
                <div class="pb-2">
                    <a asp-action="AddBug" asp-route-id="@Model.Id" asp-controller="Bugs" class="btn btn-info form-control text-white">
                                Edit Bug</a>
                </div>
                
                <div>
                    <a asp-action="Index" class="btn btn-danger form-control">Back to List</a>
                </div>
            </div>
            
        </div>
        
        <div class="grid ml-2">
            
            <div class="Text-Areas">
                <div class="form-group">
                    <div class="col-3">
                        <label asp-for="Description"></label> @*add style*@
                    </div>
                    <div class="col-12">
                        <textarea readonly="readonly" rows="4" cols="40" type="text" asp-for="Description" class="form-control"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-3">
                        <label asp-for="StepsToRepo"></label> @*add style*@
                    </div>
                    <div class="col-12">
                        <textarea readonly="readonly" rows="5" cols="40"
                            asp-for="StepsToRepo" class="form-control">
                        </textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-3">
                        <label asp-for="ExpectedResult"></label> @*add style*@
                    </div>
                    <div class="col-12">
                        <textarea readonly="readonly" rows="2" cols="40"
                            asp-for="ExpectedResult" class="form-control">
                        </textarea>
                    </div>
                </div>
            </div>

            <div class="Selectors">
                @* TYPE *@
                <div class="form-group">
                    <div>
                        <label asp-for="Type"></label> @*add style*@
                    </div>
                    <div class="ss" >
                        <select asp-for="Type" class="form-control sel" disabled="disabled">
                            <option value="">Select Type...</option>
                            <option value="Game System">Game System</option>
                            <option value="Game Design">Game Design</option>
                            <option value="Level Design">Level Design</option>
                            <option value="Character Design">Character Design</option>
                            <option value="Graphics">Graphics</option>
                            <option value="Texture/Visual">Texture/Visual</option>
                            <option value="Animation">Animation</option>
                            <option value="Sound">Sound</option>
                            <option value="Networking">Networking</option>
                            <option value="Misc">Misc</option>
                        </select>
                        <span class="focus"></span>
                    </div>
                </div>
                @* PRIORITY      *@
                <div class="form-group">
                    <div>
                        <label asp-for="Priority"></label> @*add style*@
                    </div>
                    <div class="ss">
                        <select asp-for="Priority" class="form-control sel" disabled="disabled">
                            <option value="">Select Priority...</option>
                            <option value="Very High">Very High</option>
                            <option value="High">High</option>
                            <option value="Medium">Medium</option>
                            <option value="Low">Low</option>
                            <option value="Very Low">Very Low</option>
                        </select>
                        <span class="focus"></span>
                    </div>
                </div>
                @* SEVERITY                          *@
                <div class="form-group">
                    <div>
                        <label asp-for="Severity"></label> @*add style*@
                    </div>
                    <div class="ss">
                        <select  asp-for="Severity" class="form-control sel" disabled="disabled">
                            <option value="">Select Severity...</option>
                            <option value="S">S</option>
                            <option value="A">A</option>
                            <option value="B">B</option>
                            <option value="C">C</option>
                            <option value="D">D</option>
                            <option value="F">F</option>
                        </select>
                        <span class="focus"></span>
                    </div>
                </div>
                @* PLATFORM      *@
                <div class="form-group">
                    <div>
                        <label asp-for="Platform"></label> @*add style*@
                    </div>
                    <div class="ss">
                        <select asp-for="Platform" class="form-control sel" disabled="disabled">
                            <option value="">Select Platform...</option>
                            <option value="All">All</option>
                            <option value="PC">PC</option>
                            <option value="XB">XB</option>
                            <option value="PS">PS</option>
                            <option value="NTD">NTD</option>
                            <option value="iOS">iOS</option>
                            <option value="AnDr">AnDr</option>
                            <option value="WGL">WGL</option>
                        </select>
                        <span class="focus"></span>
                    </div>
                </div>
            </div>
            
            <div class="right-space">
            </div>
            
        </div>
    </form>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}

